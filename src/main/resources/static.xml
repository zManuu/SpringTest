<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>

    <!-- todo: specify log level in bean -->
    <bean
        id="debugLogger"
        class="org.slf4j.LoggerFactory"
        factory-method="getLogger"
    >
        <constructor-arg value="" />
    </bean>

    <!-- todo: specify log level in bean -->
    <bean
        id="prodLogger"
        class="org.slf4j.LoggerFactory"
        factory-method="getLogger"
    >
        <constructor-arg value="" />
    </bean>

    <bean
        id="gson"
        class="com.google.gson.Gson"
    />

    <bean
        id="config-db"
        class="de.manu.springtest.modules.data.DataSourceConfig"
    >
        <constructor-arg name="host" value="${db.host}" />
        <constructor-arg name="port" value="${db.port}" />
        <constructor-arg name="userName" value="${db.userName}" />
        <constructor-arg name="userPassword" value="${db.userPassword}" />
        <constructor-arg name="databaseName" value="${db.databaseName}" />
    </bean>

    <bean
        id="config-version"
        class="de.manu.springtest.modules.server.VersionConfig"
    >
        <constructor-arg name="version" value="${version.version}" />
        <constructor-arg name="name" value="${version.name}" />
    </bean>

</beans>